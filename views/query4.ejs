<%- include('layout/dbInfo') %>

    <div class="col d-flex justify-content-center">
        <a href="/search">
            <button class="btn btn-secondary dropdown-btn" type="button">
                Basic City Search
            </button>
        </a>
    </div>

    <div class="col">
    </div>

    </div>
    </div>

    <div class="d-flex justify-content-center query-section">
        <div class="row search-row">

            <div class="col-4 d-flex justify-content-center">
                <div class="card query-selectors">
                    <div class="card-body">
                        <%- include('./flash') %>
                            <h5 class="card-title text-center">Cost Per Month by Region</h5>
                            <p class="card-text">Search by region to view how rent tends to change over the course of a
                                year in a line graph</p>

                            <form action="/query4" method="POST">
                                <div class="mb-5">
                                    <div>
                                        <label for="region" class="form-label">Region</label>
                                    </div>
                                    <div class="d-inline-flex">
                                        <input type="text" class="form-control" id="region" name="region"
                                            aria-describedby="region">
                                        <button type="submit" class="btn btn-primary mx-3">Add</button>
                                    </div>
                                </div>

                                <div class="card added-locations-box mb-5">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">Added Regions</h5>
                                    </div>
                                </div>

                                <div class="form-check form-switch mb-5">
                                    <input class="form-check-input" type="checkbox" role="switch" id="seeAll">
                                    <label class="form-check-label" for="seeAll">See all regions</label>
                                </div>

                                <button type="submit" class="btn btn-primary">Graph Query</button>
                            </form>
                    </div>
                </div>
            </div>