<%- include('layout/dbInfo') %>

    <div class="col d-flex justify-content-center">
        <a href="/search">
            <button class="btn btn-secondary dropdown-btn" type="button">
                Basic City Search
            </button>
        </a>
    </div>

    <div class="col">
    </div>

    </div>
    </div>

    <div class="d-flex justify-content-center query-section">
        <div class="row search-row">

            <div class="col-4 d-flex justify-content-center">
                <div class="card query-selectors">
                    <div class="card-body">
                        <%- include('./flash') %>
                            <h5 class="card-title text-center">Cities Ranked</h5>
                            <p class="card-text my-4">Search over a range of years to view the highest or lowest cost
                                cities in a bar graph</p>

                            <form action="/query2" method="POST">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="sort" id="highestCost">
                                        <label class="form-check-label" for="highestCost">
                                            View highest cost
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="sort" id="lowestCost"
                                            checked>
                                        <label class="form-check-label" for="lowestCost">
                                            View lowest cost
                                        </label>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="startingYear" class="form-label">Starting Year</label>
                                    <select class="form-select" aria-label="startingYear" id="startingYear"
                                        name="startingYear">
                                        <option value="2010">2010</option>
                                        <option value="2011">2011</option>
                                        <option value="2012">2012</option>
                                        <option value="2013">2013</option>
                                        <option value="2014">2014</option>
                                        <option value="2015">2015</option>
                                        <option value="2016">2016</option>
                                        <option value="2017">2017</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="endingYear" class="form-label">Ending Year</label>
                                    <select class="form-select" aria-label="endingYear" id="endingYear"
                                        name="endingYear">
                                        <option value="2010">2010</option>
                                        <option value="2011">2011</option>
                                        <option value="2012">2012</option>
                                        <option value="2013">2013</option>
                                        <option value="2014">2014</option>
                                        <option value="2015">2015</option>
                                        <option value="2016">2016</option>
                                        <option value="2017">2017</option>
                                    </select>
                                </div>

                                <div class="form-check form-switch mb-3">
                                    <input class="form-check-input" type="checkbox" role="switch" id="fullRange">
                                    <label class="form-check-label" for="fullRange">See full range of
                                        years</label>
                                </div>

                                <div class="mb-5">
                                    <label for="numResults" class="form-label">Number of Cities</label>
                                    <select class="form-select" aria-label="numResults" id="numResults"
                                        name="numResults">
                                        <option value="5">5</option>
                                        <option value="10">10</option>
                                        <option value="25">25</option>
                                        <option value="50">50</option>
                                        <option value="100">100</option>
                                    </select>
                                </div>

                                <button type="submit" class="btn btn-primary">Graph Query</button>
                            </form>
                    </div>
                </div>
            </div>