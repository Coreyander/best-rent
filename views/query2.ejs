<%- include('layout/dbInfo') %>

    <div class="col d-flex justify-content-center">
        <a href="/search">
            <button class="btn btn-secondary dropdown-btn" type="button">
                Basic City Search
            </button>
        </a>
    </div>

    <div class="col">
    </div>

    </div>
    </div>

    <div class="d-flex justify-content-center query-section">
        <div class="row search-row">

            <div class="col-4 d-flex justify-content-center">
                <div class="card query-selectors">
                    <div class="card-body">
                        <%- include('./flash') %>
                            <h5 class="card-title text-center">Average Rent Price Per Square Foot by State</h5>
                            <p class="card-text my-4">Search by state to view a bar graph of average rent prices per
                                square foot over a range of years.</p>

                            <form action="/query2" method="POST">
                                <div class="mb-3">
                                    <label for="startingYear" class="form-label">Starting Year</label>
                                    <select class="form-select" aria-label="startingYear" id="startingYear"
                                        name="startingYear">
                                        <option value="2010">2010</option>
                                        <option value="2011">2011</option>
                                        <option value="2012">2012</option>
                                        <option value="2013">2013</option>
                                        <option value="2014">2014</option>
                                        <option value="2015">2015</option>
                                        <option value="2016">2016</option>
                                        <option value="2017">2017</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="endingYear" class="form-label">Ending Year</label>
                                    <select class="form-select" aria-label="endingYear" id="endingYear"
                                        name="endingYear">
                                        <option value="2010">2010</option>
                                        <option value="2011">2011</option>
                                        <option value="2012">2012</option>
                                        <option value="2013">2013</option>
                                        <option value="2014">2014</option>
                                        <option value="2015">2015</option>
                                        <option value="2016">2016</option>
                                        <option value="2017">2017</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="state" class="form-label">State</label>
                                    <input type="text" class="form-control" id="state" name="state"
                                        aria-describedby="state">
                                </div>

                                <button type="submit" class="btn btn-primary">Graph Query</button>
                            </form>
                    </div>
                </div>
            </div>